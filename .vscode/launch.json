    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Collector",
            "env": {
                "NODE_ENV": "test"
            },
            "args": [
                "${workspaceFolder}/backend/src/main.ts"
            ],            
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register",
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/backend/test.env",
            "cwd": "${workspaceRoot}/backend",
            "console": "integratedTerminal",
            "protocol": "inspector"
        }
    ]
}